const highfiveGIFs = [
    "https://media.giphy.com/media/l2SqfX8uaQokxYvDi/giphy.mp4",
    "https://media.giphy.com/media/3oz8xSjBmD1ZyELqW4/giphy.mp4",
    "https://media.giphy.com/media/xUPOq2p8YJkQ3x3cXe/giphy.mp4",
    "https://media.giphy.com/media/26ufdipQqU2lhNA4g/giphy.mp4"
];

module.exports = {
    name: "highfive",
    command: ["highfive", "hf"],
    description: "Send a random high-five GIF in group chat. Powered by SOURAV_,MD",

    async execute(sock, m, args) {
        try {
            const jid = m.key.remoteJid;
            if (!jid.endsWith("@g.us")) return sock.sendMessage(jid, { text: "❌ This command works in *groups only*." }, { quoted: m });

            const mentioned = m.message?.extendedTextMessage?.contextInfo?.mentionedJid || [];
            const targetUser = mentioned[0] || m.sender;
            const name = targetUser.split("@")[0];

            const randomGIF = highfiveGIFs[Math.floor(Math.random() * highfiveGIFs.length)];

            await sock.sendMessage(jid, {
                video: { url: randomGIF },
                mimetype: "video/mp4",
                gifPlayback: true,
                caption: `✋ High-five for @${name}!\nPowered by SOURAV_,MD`,
                mentions: [targetUser]
            }, { quoted: m });
        } catch (err) {
            console.error("Highfive Error:", err);
            await sock.sendMessage(m.key.remoteJid, { text: "❌ Failed to send high-five GIF." }, { quoted: m });
        }
    }
};
